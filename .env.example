# ================================
# Platform Configuration
# ================================
# Supported platforms: bilibili, youtube, twitch
PLATFORM=bilibili

# ================================
# Authentication Configuration
# ================================
# Universal cookie file path (works for any platform)
COOKIE_FILE=cookies/default.txt

# Platform-specific cookie files (optional, overrides COOKIE_FILE for specific platforms)
# These have higher priority than COOKIE_FILE for their respective platforms

# Bilibili cookie file
BILIBILI_COOKIE_FILE=cookies/bilibili.txt

# YouTube cookie file  
YOUTUBE_COOKIE_FILE=cookies/youtube.txt

# Twitch cookie file (future support)
# TWITCH_COOKIE_FILE=cookies/twitch.txt

# Cookie Priority Order:
# 1. Platform-specific env var (e.g., BILIBILI_COOKIE_FILE)
# 2. Universal COOKIE_FILE env var
# 3. Platform-specific default file (e.g., cookies/bilibili.txt)
# 4. Universal default file (cookies/default.txt)

# ================================
# Target Matching Configuration
# ================================
# Keywords to match (comma separated)
TARGET_KEYWORDS=programming,tech,coding

# Match mode: any (match any keyword) or all (match all keywords)
MATCH_MODE=any

# Case sensitive matching (true/false)
CASE_SENSITIVE=false

# ================================
# Playback Configuration
# ================================
# Video play duration (seconds)
PLAY_DURATION=30

# Delay between actions (milliseconds)
ACTION_DELAY=3000

# Search interval between rounds (seconds)
SEARCH_INTERVAL=30

# ================================
# Browser Configuration
# ================================
# Headless mode (true/false)
HEADLESS=true

# Browser type: chrome, firefox, safari
BROWSER_TYPE=chrome

# ================================
# API Configuration
# ================================
# Enable API mode (true) or legacy browser mode (false)
USE_API_MODE=true

# Videos per page when fetching recommendations (max: 30)
VIDEOS_PER_PAGE=12

# Initial video source (home/related/short)
INITIAL_VIDEO_SOURCE=home

# Request timeout (milliseconds)
API_TIMEOUT=30000

# ================================
# Multi-threading Configuration
# ================================
# Number of concurrent players (1-10, recommended: 1-5)
CONCURRENT_PLAYERS=1

# Delay between starting each player (milliseconds)
PLAYER_START_DELAY=5000

# ================================
# Logging Configuration
# ================================
# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Log to file (true/false)
LOG_TO_FILE=true

# ================================
# Advanced Configuration
# ================================
# Maximum videos to process per session
MAX_VIDEOS_PER_SESSION=1000

# History cleanup interval (days)
HISTORY_CLEANUP_DAYS=30

# Retry attempts for failed operations
RETRY_ATTEMPTS=3

# User agent override (optional)
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/138.0.0.0 Safari/537.36"

# ================================
# Proxy Configuration (Optional)
# ================================
# Enable/disable proxy usage (true/false)
USE_PROXY=false
# HTTP proxy for API requests
HTTP_PROXY=
# HTTPS proxy for API requests  
HTTPS_PROXY=
# SOCKS proxy for API requests
SOCKS_PROXY=

# ================================
# Active Search Configuration
# ================================
# Enable active search when algorithm doesn't recommend target videos (true/false)
ENABLE_ACTIVE_SEARCH=true

# Number of missed rounds before triggering active search (default: 10)
ACTIVE_SEARCH_THRESHOLD=10

# Search strategy: random, sequential, weighted (default: random)  
ACTIVE_SEARCH_STRATEGY=random

# ================================
# Queue Management Configuration
# ================================
# Maximum videos to add to queue per search (default: 5)
MAX_VIDEOS_PER_QUEUE=5

# Maximum queue size, stop fetching recommendations when exceeded (default: 20)
MAX_QUEUE_SIZE=20

# ================================
# Simulated Playback Configuration
# ================================
# Enable simulated playback mode (true/false)
# Simulated playback dramatically improves efficiency by not actually playing videos
# while still influencing the recommendation algorithm
USE_SIMULATED_PLAYBACK=false

# Simulated playback speed multiplier (1-5x, default: 2)
# 2 = 2x speed, actual wait time = simulated duration รท 2
# 5 = 5x speed, actual wait time = simulated duration รท 5
# Recommendation: Start with 2x, max 5x to avoid detection
SIMULATED_PLAYBACK_SPEED=2

# Simulated watch duration (seconds, default: 30)
# How long to tell the platform we watched the video
SIMULATED_WATCH_DURATION=30

# Minimum actual wait time (seconds, default: 5)
# Minimum time to actually wait per video for safety considerations
SIMULATED_MIN_WAIT_TIME=5

# Simulated playback duration random variation (percentage, default: 5)
# Adds random variation to playback duration to avoid fixed patterns
# Security focused: 8-15% | Balanced: 3-7% | Efficiency focused: 0-2%
SIMULATED_DURATION_VARIATION=5
