# ================================
# 平台配置
# ================================
# 支持的平台: bilibili, youtube, twitch
PLATFORM=bilibili

# ================================
# 身份验证配置
# ================================
# 通用Cookie文件路径（适用于任何平台）
COOKIE_FILE=cookies/default.txt

# 平台专用Cookie文件（可选，对特定平台优先于COOKIE_FILE）
# 这些配置对各自平台具有更高优先级

# B站Cookie文件
BILIBILI_COOKIE_FILE=cookies/bilibili.txt

# YouTube Cookie文件  
YOUTUBE_COOKIE_FILE=cookies/youtube.txt

# Twitch Cookie文件（未来支持）
# TWITCH_COOKIE_FILE=cookies/twitch.txt

# Cookie优先级顺序：
# 1. 平台专用环境变量 (如 BILIBILI_COOKIE_FILE)
# 2. 通用COOKIE_FILE环境变量
# 3. 平台专用默认文件 (如 cookies/bilibili.txt)
# 4. 通用默认文件 (cookies/default.txt)

# ================================
# 目标匹配配置
# ================================
# 要匹配的关键词（用逗号分隔）
TARGET_KEYWORDS=编程,技术,科技

# 匹配模式: any（匹配任意关键词）或 all（匹配所有关键词）
MATCH_MODE=any

# 区分大小写（true/false）
CASE_SENSITIVE=false

# ================================
# 播放配置
# ================================
# 视频播放时长（秒）
PLAY_DURATION=30

# 操作之间的延迟时间（毫秒）
ACTION_DELAY=3000

# 搜索轮次之间的间隔时间（秒）
SEARCH_INTERVAL=30

# ================================
# 浏览器配置
# ================================
# 无头模式（true/false）
HEADLESS=true

# 浏览器类型: chrome, firefox, safari
BROWSER_TYPE=chrome

# ================================
# API配置
# ================================
# 启用API模式（true）或传统浏览器模式（false）
USE_API_MODE=true

# 获取推荐视频时每页的视频数量（最大值: 30）
VIDEOS_PER_PAGE=12

# 初始视频来源（home: 首页推荐 / related: 相关视频 / short: 短视频）
INITIAL_VIDEO_SOURCE=home

# 请求超时时间（毫秒）
API_TIMEOUT=30000

# ================================
# 多线程配置
# ================================
# 并发播放器数量（1-10，推荐: 1-5）
CONCURRENT_PLAYERS=1

# 每个播放器启动间隔时间（毫秒）
PLAYER_START_DELAY=5000

# ================================
# 日志配置
# ================================
# 日志级别（error, warn, info, debug）
LOG_LEVEL=info

# 记录日志到文件（true/false）
LOG_TO_FILE=true

# ================================
# 高级配置
# ================================
# 每次会话最大处理视频数
MAX_VIDEOS_PER_SESSION=1000

# 历史记录清理间隔（天）
HISTORY_CLEANUP_DAYS=30

# 失败操作重试次数
RETRY_ATTEMPTS=3

# 用户代理字符串覆盖（可选）
USER_AGENT="Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/138.0.0.0 Safari/537.36"

# ================================
# 代理配置（可选）
# ================================
# 启用/禁用代理使用 (true/false)
USE_PROXY=false
# API请求的HTTP代理
HTTP_PROXY=
# API请求的HTTPS代理
HTTPS_PROXY=
# API请求的SOCKS代理
SOCKS_PROXY=

# ================================
# 主动搜索配置
# ================================
# 当算法未推荐目标视频时是否启用主动搜索 (true/false)
ENABLE_ACTIVE_SEARCH=true

# 触发主动搜索的未命中轮次阈值（默认: 10）
ACTIVE_SEARCH_THRESHOLD=10

# 搜索策略: random（随机）, sequential（顺序）, weighted（加权，默认: random）
ACTIVE_SEARCH_STRATEGY=random

# ================================
# 队列管理配置
# ================================
# 每次搜索最多添加多少个视频到队列（默认: 5）
MAX_VIDEOS_PER_QUEUE=5

# 队列最大大小，超过此数量不再获取推荐（默认: 20）
MAX_QUEUE_SIZE=20

# ================================
# 模拟播放配置
# ================================
# 启用模拟播放模式（true/false）
# 模拟播放可以大幅提高效率，无需真实播放视频，但仍会影响推荐算法
USE_SIMULATED_PLAYBACK=false

# 模拟播放速度倍率（1-5倍，默认: 2）
# 2 = 2倍速，实际等待时间 = 模拟时长 ÷ 2
# 5 = 5倍速，实际等待时间 = 模拟时长 ÷ 5
# 建议: 从2倍开始，最多5倍速以避免被检测
SIMULATED_PLAYBACK_SPEED=2

# 模拟观看时长（秒，默认: 30）
# 告诉平台我们观看了多长时间的视频
SIMULATED_WATCH_DURATION=30

# 最小实际等待时间（秒，默认: 5）
# 每个视频实际最少等待多长时间，用于安全考虑
SIMULATED_MIN_WAIT_TIME=5

# 模拟播放时长随机浮动范围（百分比，默认: 5）
# 让每次播放时长都有随机变化，避免固定模式被检测
# 安全优先: 8-15% (大随机性) | 平衡: 3-7% | 效率优先: 0-2%
SIMULATED_DURATION_VARIATION=5
